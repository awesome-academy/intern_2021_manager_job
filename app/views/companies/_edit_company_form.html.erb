<%= form_for @company do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-lg-4">
      <div class="ava-profile">
        <%= image_tag Settings.image.company_avatar %>
      </div>
    </div>

    <div class="col-lg-8">
      <div class="row row-profile">
        <div class="col-lg-5">
          <div class="pf-title">
            <%= t ".name" %>
          </div>
          <div class="pf-field">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="pf-title">
            <%= t ".phone" %>
          </div>
          <div class="pf-field">
            <%= f.text_field :phone_number %>
          </div>
        </div>
      </div>

      <div class="row row-profile">
        <div class="col-lg-11">
          <div class="pf-title">
            <%= t ".email" %>
          </div>
          <div class="pf-field">
            <%= text_field_tag :email, @current_account.email, readonly: true %>
          </div>
        </div>
      </div>

      <div class="row row-profile">
        <div class="col-lg-11">
          <div class="pf-title">
            <%= t ".address" %>
          </div>
          <div class="pf-field">
            <%= f.text_field :address %>
          </div>
        </div>
      </div>

      <div class="row row-profile">
        <div class="col-lg-11">
          <div class="pf-title">
            <%= t ".description" %>
          </div>
          <div class="pf-field company-description">
            <%= f.text_area :description %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-12">
      <button type="submit" class="update">
        <%= t ".update" %>
      </button>
    </div>
  </div>
<% end %>
