        <div class="col-lg-3 column">
          <div class="widget">
            <h3 class="footer-title">
              <%= link_to t(".find_jobs"), "#" %>
            </h3>
            <div class="link_widgets">
              <div class="row">
                <div class="col-lg-12">
                  <%= link_to t(".hn_jobs"), "#" %>
                  <%= link_to t(".dn_jobs"), "#" %>
                  <%= link_to t(".hcm_jobs"), "#" %>
