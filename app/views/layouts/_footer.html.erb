        </div>
        <div class="col-lg-3 column">
          <div class="widget">
            <h3 class="footer-title">
              <%= t(".provides") %>
            </h3>
            <div class="link_widgets">
              <div class="row">
                <div class="col-lg-12">
                  <%= link_to t(".security") %>
                  <%= link_to t(".communications") %>
                  <%= link_to t(".support") %>
                  <%= link_to t(".license") %>
                </div>
              </div>
