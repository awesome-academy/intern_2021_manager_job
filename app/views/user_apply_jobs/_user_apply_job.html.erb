<div class="job-listing wtabs">
  <div class="job-title-sec">
    <%= link_to user_path user_apply_job.user do %>
      <h3><%= user_apply_job.user.name %></h3>
    <% end %>
    <div class="job-lctn">
      <i class="fa fa-map-marker"></i>
      <%= user_apply_job.user.address %>
    </div>
  </div>
  <div class="job-style-bx job-style-bx-custom">
    <% if user_apply_job.pending? %>
      <%= button_to t(".accept"), process_candidate_path(user_apply_job.id),
        method: :patch, class: "btn btn-success" %>
      <%= button_to t(".decline"), process_candidate_path(user_apply_job.id),
        method: :delete, class: "btn btn-danger" %>
    <% else %>
      <button class="btn btn-success"><%= t ".accepted" %></button>
    <% end %>
  </div>
</div>
