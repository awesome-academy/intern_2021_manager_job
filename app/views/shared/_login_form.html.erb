<%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
  <div class="cfield login-input">
    <%= f.text_field :email, placeholder: t(".placeholder.email") %>
  </div>
  <div class="cfield login-input">
    <%= f.password_field :password, placeholder: t(".placeholder.password") %>
  </div>
  <div class="checkbox inline">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t(".remember") %>
    <% end %>
  </div>
  <%= f.submit t(".submit_text") %>
  <div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
