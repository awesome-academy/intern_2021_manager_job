<%= form_for object do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row row-info-input">
      <div class="col-lg-6">
        <div class="pf-title">
          <%= t ".name" %>
          <span class="required-field"></span>
        </div>
        <div class="pf-field">
          <%= f.text_field :name, placeholder: t(".placeholder.name") %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="pf-title">
          <%= t ".phone" %>
          <span class="required-field"></span>
        </div>
        <div class="pf-field">
          <%= f.text_field :phone_number, placeholder: t(".placeholder.phone_number") %>
        </div>
      </div>
  </div>

  <div class="row row-info-input">
      <div class="col-lg-11">
        <div class="pf-title">
          <%= t ".address" %>
          <span class="required-field"></span>
        </div>
        <div class="pf-field">
          <%= f.text_field :address, placeholder: t(".placeholder.address") %>
        </div>
      </div>
  </div>

  <% if current_account.company? %>
    <div class="row row-info-input">
        <div class="col-lg-11">
          <div class="pf-title">
            <%= t ".description" %>
            <span class="required-field"></span>
          </div>
          <div class="pf-field">
            <%= f.text_area :description, placeholder: t(".placeholder.description"), class:"des" %>
          </div>
        </div>
    </div>
  <% elsif current_account.user? %>
    <div class="row row-info-input">
        <div class="col-lg-4">
          <div class="pf-title">
            <%= t ".gender" %>
            <span class="required-field"></span>
          </div>
          <div class="pf-field">
            <%= f.select :gender, gender_options %>
          </div>
        </div>
        <div class="col-lg-5">
          <div class="pf-title">
            <%= t ".birthday" %>
            <span class="required-field"></span>
          </div>
          <div class="pf-field">
            <%= f.date_field :birthday %>
          </div>
        </div>
    </div>

    <section>
      <div class="block">
        <div class="container">
          <div class="row user-info-input">
            <div class="col-lg-12">
              <%= render "partial/info_apply_form", field: :user_info, form: f %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>

  <%= f.submit t(".submit_text"), class:"btn btn-primary new-info-btn"%>
<% end %>
