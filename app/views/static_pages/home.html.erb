<div class="theme-layout" id="scrollup">
  <%= render partial: "partial/search_basic" %>
  <section id="scroll-here">
    <div class="block">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="heading">
              <h2>
                <%= t ".company_list" %>
              </h2>
              <div class="company-list" id="companies-list">
                <%= render @companies %>
              </div>
              <div class="pagination" id="companies_paginator">
                <%= paginate @companies, remote: true,
                  param_name: :company_page, theme: "twitter-bootstrap-3" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="scroll-here">
    <div class="block">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="heading">
              <h2>
                <%= t ".recent_job" %>
              </h2>
              <span>
                <%= t ".lead_employers" %>
              </span>
            </div>
            <div class="job-listings-sec" id="jobs-list">
              <%= render @jobs %>
            </div>
            <div class="pagination" id="jobs_paginator">
                <%= paginate @jobs, remote: true,
                  param_name: :job_page, theme: "twitter-bootstrap-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
